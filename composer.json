{
    "name": "umpirsky/currency-list",
    "type": "library",
    "description": "List of all currencies with names and ISO 4217 codes in all languages and all data formats.",
    "license": "MIT",
    "authors": [
        {
            "name": "Saša Stamenković",
            "email": "umpirsky@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.4"
    },
    "require-dev": {
        "umpirsky/list-generator": "^1.2",
        "slowprog/composer-copy-file": "^0.2",
        "symfony/locale": "^2.7|^3.0"
    },
    "scripts": {
